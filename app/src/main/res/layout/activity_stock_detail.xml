<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/activity_stock_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.android.investomaster.StockDetail">


    <TextView
        android:id="@+id/tv_detailed_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/tv_detailed_symbol"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/tv_detailed_price"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/tv_detailed_change"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="22sp"
        />

    <!--<DatePicker
        android:id="@+id/dp_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <DatePicker
        android:id="@+id/dp_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />-->
    <TextView
        android:id="@+id/tv_historical_response"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />



    </LinearLayout>
</ScrollView>
